<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <HediffDef>
    <defName>Fungi_hediff_Spores</defName>
    <label>&lt;color=#9430ab&gt;Flesh eating spores &lt;/color&gt;</label>
    <description>Flesh eating Spores attack the brain and body and let it rot. Causes sometimes dementia</description>
    <hediffClass>HediffWithComps</hediffClass>
    <defaultLabelColor>(0.7, 1.0, 0.7)</defaultLabelColor>
    <lethalSeverity>1</lethalSeverity>
    <makesSickThought>true</makesSickThought>
    <scenarioCanAdd>false</scenarioCanAdd>
    <taleOnVisible>ToxicityRevealed</taleOnVisible>
    <tendable>true</tendable>
    <comps>
      <li Class="HediffCompProperties_Immunizable">
        <severityPerDayNotImmune>0.5</severityPerDayNotImmune>
        <severityPerDayImmune>-0.5</severityPerDayImmune>
        <immunityPerDayNotSick>-0.25</immunityPerDayNotSick>
        <immunityPerDaySick>0.2</immunityPerDaySick>
      </li>
      <li Class="HediffCompProperties_TendDuration">
        <baseTendDurationHours>32</baseTendDurationHours>
        <disappearsAtTotalTendQuality>2</disappearsAtTotalTendQuality>
        <severityPerDayTended>-0.42</severityPerDayTended>
      </li>
    </comps>
    <stages>
      <li>
        <painOffset>0.05</painOffset>
        <label>initial</label>
        <becomeVisible>true</becomeVisible>
      </li>
      <li>
        <label>minor</label>
        <minSeverity>0.1</minSeverity>
        <vomitMtbDays>0.1</vomitMtbDays>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.05</offset>
          </li>
          <li>
            <capacity>Manipulation</capacity>
            <offset>-0.05</offset>
          </li>
        </capMods>
      </li>
      <li>
        <painOffset>0.15</painOffset>
        <label>moderate</label>
        <minSeverity>0.3</minSeverity>
        <vomitMtbDays>0.1</vomitMtbDays>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.1</offset>
          </li>
          <li>
            <capacity>Manipulation</capacity>
            <offset>-0.1</offset>
          </li>
        </capMods>
      </li>
      <li>
        <painOffset>0.3</painOffset>
        <label>serious</label>
        <minSeverity>0.5</minSeverity>
        <vomitMtbDays>0.1</vomitMtbDays>
        <mentalStateGivers>
          <li>
            <mentalState>Wander_Psychotic</mentalState>
            <mtbDays>2</mtbDays>
          </li>
        </mentalStateGivers>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.3</offset>
          </li>
          <li>
            <capacity>Manipulation</capacity>
            <offset>-0.3</offset>
          </li>
        </capMods>
      </li>
      <li>
        <painOffset>0.5</painOffset>
        <label>extreme</label>
        <minSeverity>0.7</minSeverity>
        <vomitMtbDays>0.05</vomitMtbDays>
        <mentalStateGivers>
          <li>
            <mentalState>Wander_Psychotic</mentalState>
            <mtbDays>1</mtbDays>
          </li>
        </mentalStateGivers>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <setMax>0.25</setMax>
          </li>
          <li>
            <capacity>Manipulation</capacity>
            <setMax>-0.5</setMax>
          </li>
        </capMods>
        <hediffGivers>
          <li Class="HediffGiver_Random">
            <hediff>Dementia</hediff>
            <mtbDays>2</mtbDays>
            <partsToAffect>
              <li>Brain</li>
            </partsToAffect>
          </li>
        </hediffGivers>
      </li>
    </stages>
  </HediffDef>
</Defs>